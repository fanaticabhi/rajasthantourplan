<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="4dp"
    android:paddingTop="5dp"
    android:background="@drawable/oldpaper"
    tools:context="com.example.abhi.rajasthantourplan.Events">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/textfielddesign"
        android:paddingHorizontal="15dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        android:fontFamily="@font/caviardreams"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:text="Events in the place" />

    <ListView
        android:id="@+id/events"
        android:paddingHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginTop="20dp" />
    </LinearLayout>
</ScrollView>
